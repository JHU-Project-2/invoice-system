{{!-- CRUD MENU --}}
<div class="card-header mb-2">
    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#addItemModal">
        Add Item
    </button>
    <a href="/dashboard/delete-invoice">
        <button class="btn btn-sm btn-primary">Delete Invoice</button>
    </a>
    <a href="/dashboard/edit-invoice">
        <button class="btn btn-sm btn-primary">Edit Invoice</button>
    </a>
    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#emailModal">
        Send Invoice
    </button>
</div>

<h1>Invoice Details</h1>
<h4>{{project.title}}</h4>
{{!-- this is where the actual invoice template will go --}}

<div class="card">
    <div class="card-header">
        {{invoice.name}}
    </div>
    <div class="card-body">

    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Description</th>
            <th scope="col">Units</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Line Total</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each invoice.items}}
            <tr>
                <td class="description">{{description}}</td>
                <td class="units">{{units}}</td>
                <td class="ppu">{{unit_price}}</td>
                <td class="total"></td>
                <td>
                    <button class="btn btn-sm btn-primary delete-item-btn" data-item-id="{{id}}">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>


