<h1>Invoice Details</h1>
<h4>{{project.title}}</h4>
{{!-- this is where the actual invoice template will go --}}

<div class="card">
    <div class="card-header">
        {{invoice.name}}
    </div>
    <div class="card-body">

    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Description</th>
            <th scope="col">Units</th>
            <th scope="col">PPU</th>
            <th scope="col">Line Total</th>
        </tr>
    </thead>
    <tbody>
        {{#each invoice.items}}
            <tr>
                <td>{{description}}</td>
                <td>{{units}}</td>
                <td>{{unit_price}}</td>
                {{!-- HOW DO WE TOTAL THE COLUMNS? --}}
                <td>Line Total Here</td>
            </tr>
        {{/each}}
    </tbody>
</table>









