{{!-- CRUD MENU --}}
<div class="card-header mb-2">
    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#addItemModal">
        Add Item
    </button>
    <a href="/dashboard/delete-invoice">
        <button class="btn btn-sm btn-primary">Delete Invoice</button>
    </a>

    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#emailModal">
        Send Invoice
    </button>
</div>

<h1>Invoice Details</h1>
{{!-- this is where the actual invoice template will go --}}

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <p>Invoice: {{invoice.name}}</p>
        <p>Invoice Number: {{invoice.id}}</p>
    </div>
    <div class="card-body">
        <p>Company Name: </p>
        <p>Pay By: </p>
        <p>Date: </p>
    </div>
    <div class="card-header">
        <h3>Bill To:</h3>
        {{invoice.BillingAddress.address_1}}        
    </div>
    <div class="card-body">
        <p>Company Name </p>
        <p>Pay By: </p>
        <p>Date: </p>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Description</th>
            <th scope="col">Units</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Line Total</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each invoice.items}}
            <tr>
                <td class="description">{{description}}</td>
                <td class="units">{{units}}</td>
                <td class="ppu">{{unit_price}}</td>
                <td class="total"></td>
                <td>
                    <button class="btn btn-sm btn-primary delete-item-btn" data-item-id="{{id}}">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        {{/each}}
        <tr>
            <th>TOTAL</th>
            <td>$</th>
        </tr>
    </tbody>
</table>


