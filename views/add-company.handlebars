<div class="row justify-content-center">
  <div class="card">

    <div class="add-company-partial">
      <h1 class="card-header">Add Company</h1>

      <form id="add-company-form">
        <div class="form-group">
          <input type="text" class="form-control" id="company-name" placeholder="Company Name" />
        </div>


        <div class="form-group col-11">
          <h3>Company Contact</h3>
          <input name="contact-name" type="text" value="{{company.contact.name}}" placeholder="Contact Name"
            class="form-control" />
          <input name="contact-email" type="text" value="{{company.contact.email}}" placeholder="Email"
            class="form-control" />
          <input name="contact-phone" type="text" value="{{company.contact.phone}}" placeholder="Phone"
            class="form-control" />
        </div>
        <br>
        <br>

        <div class="form-group col-11">
          <h3>Company Address</h3>
          <input name="contact-address-1" type="text" value="{{company.address.address_1}}" placeholder="Address"
            class="form-control" />
          <input name="contact-address-2" type="text" value="{{company.address.address_2}}" placeholder="Apt/Unit/Floor"
            class="form-control" />
          <input name="contact-city" type="text" value="{{company.address.city}}" placeholder="City"
            class="form-control" />
          <input name="contact-state" type="text" value="{{company.address.state}}" placeholder="State"
            class="form-control" />
          <input name="contact-zip-code" type="text" value="{{company.address.zip_code}}" placeholder="Zip Code"
            class="form-control" />
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-sm btn-primary m-2">Submit</button>
        </div>

      </form>
    </div>
  </div>
</div>

<script src="/js/add-company.js"></script>
<script src="/js/format-phone.js"></script>