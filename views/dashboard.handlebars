                            <span class="nav_name" id="logout">SignOut</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
        <div class="col-8 companies">
            {{#each companies}}
                <a href="/company/{{id}}">
                    <h4 class="company"> {{name}} </h4>
                </a>
            {{/each}}
        </div>
