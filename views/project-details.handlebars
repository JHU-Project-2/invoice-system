<div class="card">
    <div class="card-header">
        <h3>{{project.title}}</h3>
    </div>
    <div class="card-body">

        <h5>Project Type: {{project.type}}</h5>
        <h5>Due: {{format_date project.due_date}}</h5>
        <h5>Total Price: ${{format_amount project.price}}</h5>
    </div>
</div>


{{!-- Shows the titles of each invoice --}}
<h3 class="card-header">INVOICES</h3>

<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
        {{#each project.invoices}}
            <a href="/invoice/{{id}}">
                <li class="list-group-item">{{name}}</li>
        {{/each}}
    </ul>
</div>