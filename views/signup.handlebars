<div class="row justify-content-center ">

    <div class="col-md-6 login-register">
        <h2 class="mb-3">Signup</h2>

        <form class="form signup-form">
            <div class="form-group">
                <input class="form-control" type="text" id="name-signup" placeholder="Name" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" id="email-signup" placeholder="Email" />
            </div>
            <div class="form-group">
                <input class="form-control" type="password" id="password-signup" placeholder="Password" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">signup</button>
            </div>
        </form>
        <div class="d-flex justify-content-center">

            Already a member?
            <a href="/login">
                <button class="btn btn-sm btn-primary ml-2" type="button">Login</button>
            </a>
        </div>
    </div>
</div>
<script src="./js/signup.js"></script>